	__SLEEP		101
	CLR
	L		W#16#1010
	SI		T 10
	U		T 10
	__ASSERT==	__STW VKE,	0
	L		T 10
	__ASSERT>	__ACCU 1,	0
	__ASSERT<	__ACCU 1,	10
	DTB
